<h1>Edit article</h1>
 
<%= form_with(model: @article, local: true) do |form| %>
 
  <% if @article.errors.any? %>
    <ul>
      <% @article.errors.full_messages.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  <% end %>
 
  <div>
    <%= form.text_field :title %>
  </div>
 
  <div>
    <%= form.text_area :text %>
  </div>
 
  <div>
    <%= form.submit %>
  </div>
 
<% end %>
 
<%= link_to 'Back', articles_path %>
